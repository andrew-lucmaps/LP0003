g123

g4 = hbar_single(
  D = data_for_plot_14 %>% filter(EmIntRank=="High"),
  X = "Sector",
  Y = "TCO2e_emissions_TOM ",
  FILL = "EmIntRank",
  vert_title = "Sector",
