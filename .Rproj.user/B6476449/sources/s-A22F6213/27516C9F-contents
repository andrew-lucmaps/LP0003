  figdata_abs = D_Employment_M_only
  
  
  figdata = figdata_abs %>% 
    left_join(figdata_prp, by = "Sector") %>% 
    select(Sector, "Intensity Level" = `EML-3T`, "Number in workforce (thousands)" = value.x, "Share of workforce (%)" = value.y)
  
