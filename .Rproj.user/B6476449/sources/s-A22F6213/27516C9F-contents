D_All_Facets$Sector

data_for_plot_14 = D_All_Facets %>% 
  left_join(D_EmInt, by = "Sector") %>% 
  select(Sector, TCO2e_intensity_AOT, TCO2e_emissions_TOM , EmIntRank ) %>% 
  arrange(desc(TCO2e_intensity_AOT))

